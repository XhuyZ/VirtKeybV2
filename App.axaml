<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="VirtualKeyboardApp.App">
	<Application.Styles>
		<FluentTheme />

		<!-- Thêm styles cho các phím -->
		<Style Selector="Button.KeyButton">
			<Setter Property="Background" Value="#F0F0F0"/>
			<Setter Property="Foreground" Value="#333333"/>
			<Setter Property="CornerRadius" Value="5"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
		</Style>

		<Style Selector="Button.KeyButton:pointerover">
			<Setter Property="Background" Value="#E0E0E0"/>
		</Style>

		<Style Selector="Button.KeyButton:pressed">
			<Setter Property="Background" Value="#C0C0C0"/>
		</Style>

		<Style Selector="Button.Function">
			<Setter Property="Background" Value="#D8D8D8"/>
		</Style>

		<Style Selector="Button.Active">
			<Setter Property="Background" Value="#ADD8E6"/>
		</Style>
	</Application.Styles>
</Application>